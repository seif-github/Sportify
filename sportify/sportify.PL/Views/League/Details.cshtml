@model sportify.PL.ViewModels.LeagueDetailsViewModel

@{
    ViewData["Title"] = "League Details";
}

<h1>@Model.League.Name</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>League Information</h3>
            </div>
            <div class="card-body">
                <div>
                    <strong>Sport Type:</strong> @Model.League.SportType
                </div>
                <div>
                    <strong>Start Date:</strong> @Model.League.StartDate.ToString("yyyy-MM-dd")
                </div>
                <div>
                    <strong>Duration Between Matches:</strong> @Model.League.DurationBetweenMatches days
                </div>
                <div>
                    <strong>Number of Teams:</strong> @Model.League.NumberOfTeams
                </div>
                <div>
                    <strong>Status:</strong> @(Model.League.IsCompleted ? "Completed" : "Ongoing")
                </div>
                @if (!string.IsNullOrEmpty(Model.League.ImageUrl))
                {
                    <div class="mt-3">
                        <img src="@Model.League.ImageUrl" alt="League Image" class="img-fluid" style="max-height: 200px;" />
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Teams (@Model.Teams.Count)</h3>
            </div>
            <div class="card-body">
                @if (Model.Teams.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Team Name</th>
                                <th>Wins</th>
                                <th>Losses</th>
                                <th>Points</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model.Teams)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(team.ImageUrl))
                                        {
                                            <img src="@team.ImageUrl" alt="@team.Name" style="max-height: 30px; margin-right: 10px;" />
                                        }
                                        @team.Name
                                    </td>
                                    <td>@team.Wins</td>
                                    <td>@team.Losses</td>
                                    <td>@team.Points</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No teams have been added to this league yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    @if (Model.IsOrganizer)
    {
        <a asp-action="Edit" asp-route-id="@Model.League.LeagueID" class="btn btn-warning">Edit League</a>
        <a asp-action="Delete" asp-route-id="@Model.League.LeagueID" class="btn btn-danger">Delete League</a>
    }
    <a asp-action="BrowseLeagues" class="btn btn-secondary">Back to List</a>
</div>