}

<main class="dashboard">
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">🏆</div>
            <div class="stat-info">
                <h3>Total Leagues</h3>
                <p class="stat-number">@Model.TotalLeagues</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">👥</div>
            <div class="stat-info">
                <h3>Active Teams</h3>
                <p class="stat-number">@Model.ActiveTeams</p>
            </div>
        </div>
