@model IEnumerable<sportify.BLL.DTOs.LeagueDTO>

@{
    ViewData["Title"] = "Leagues";
}

<h1>Leagues</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New League</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.SportType)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.NumberOfTeams)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th>@Html.DisplayNameFor(model => model.OrganizerID)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td>@league.Name</td>
                <td>@league.SportType</td>
                <td>@league.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@league.NumberOfTeams</td>
                <td>@(league.IsCompleted ? "Yes" : "No")</td>
                <td>@league.OrganizerID</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@league.LeagueID" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@league.LeagueID" class="btn btn-warning">Edit</a>
                        <a asp-action="EditTeams" asp-controller="Team" asp-route-leagueId="@league.LeagueID" class="btn btn-secondary">Edit Teams</a>
                        <a asp-action="Delete" asp-route-id="@league.LeagueID" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>