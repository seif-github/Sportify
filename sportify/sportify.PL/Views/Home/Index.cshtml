<!-- Features Section -->
<div class="features" id="features">
    <h2 class="section-title">Why Choose Our Platform?</h2>
    <div class="features-grid">
        <div class="feature-card">
            <i class="ph ph-trophy ph-2x"></i>
            <h3>Create & Manage Leagues</h3>
            <p>Organize tournaments with ease using our intuitive platform</p>
        </div>
        <div class="feature-card">
            <i class="ph ph-calendar ph-2x"></i>
            <h3>Smart Match Scheduling</h3>
            <p>Automated scheduling for fair play and convenience</p>
        </div>
        <div class="feature-card">
            <i class="ph ph-chart-line-up ph-2x"></i>
            <h3>Real-time Leaderboard</h3>
            <p>Track rankings & stats instantly as matches progress</p>
        </div>
        <div class="feature-card">
            <i class="ph ph-bell-ringing ph-2x"></i>
            <h3>Instant Notifications</h3>
            <p>Get updates on match results and important events</p>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="how-it-works">
    <h2 class="section-title">How It Works</h2>
    <div class="steps">
        <div class="step-card">
            <div class="step-number">1</div>
            <h3>Create a League</h3>
            <p>Set up tournament rules, teams, and schedule with just a few clicks</p>
        </div>
        <div class="step-card">
            <div class="step-number">2</div>
            <h3>Invite Teams & Players</h3>
            <p>Send invites and build your competition effortlessly</p>
        </div>
        <div class="step-card">
            <div class="step-number">3</div>
            <h3>Track Scores & Standings</h3>
            <p>View real-time match updates and league statistics</p>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="cta" id="get-started">
    <h2>Start Your League Today!</h2>
    <p>No credit card required – Get started in minutes</p>
    <div class="cta-buttons">
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="League" asp-action="Create" class="button button-primary">Create Your League NOW!</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Register" class="button button-primary">Register for Free</a>
    }
        <a href="#contact" class="button button-secondary">Contact Us</a>
    </div>
</div>

    
