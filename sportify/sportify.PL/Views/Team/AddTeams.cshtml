@model List<sportify.BLL.DTOs.TeamDTO>

@{
    ViewData["Title"] = "Add Teams";
    int numberOfTeams = ViewBag.NumberOfTeams;
    int leagueId = ViewBag.LeagueId;
}

<h2>Add @numberOfTeams Teams</h2>

<form asp-action="AddTeams" method="post" enctype="multipart/form-data">
    <input type="hidden" name="leagueId" value="@leagueId" />

    @for (int i = 0; i < numberOfTeams; i++)
    {
        <fieldset class="mb-4 p-3 border rounded">
            <legend>Team @(i + 1)</legend>

            <div class="form-group mb-2">
                <label asp-for="@Model[i].Name" class="form-label"></label>
                <input asp-for="@Model[i].Name" class="form-control" name="teams[@i].Name" />
                <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="@Model[i].ImageUrl" class="form-label"></label>
                <input type="file" name="teamImages[@i]" class="form-control" />
                <span asp-validation-for="@Model[i].ImageUrl" class="text-danger"></span>
            </div>
        </fieldset>
    }

    <button type="submit" class="btn btn-primary">Save Teams</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

